<div class="user-info">
<div class="row">
  <div class="small-4 columns">
    <%= link_to gravatar_for(current_user, size: 100), current_user %>
  </div>
  <div class="small-8 columns">
    <h1>
        <%= current_user.name %>
    </h1>
    <h4>
        <%= link_to "view my profile", current_user %>
    </h4>
    <h5>
        <%= pluralize(current_user.schedules.count, "schedule") %>
    </h5>
  </div>
</div>
</div>
