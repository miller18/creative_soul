<% if object.errors.any? %>

    <div id="error_explanation">
      <div class="alert-box alert radius">
        <h5>The form contains <%= pluralize(object.errors.count, "error") %>.</h5>

      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      </div>
    </div>

<% end %>