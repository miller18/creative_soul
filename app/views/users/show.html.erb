<% provide(:title, @user.name) %>
<div class="row user-page">
  <aside class="large-3 columns">
    <section>
      <%= gravatar_for @user %>
      <h1>

        <%= @user.name %><br>
        <%= @user.user_type %>
      </h1>
    </section>
  </aside>
  <div class="large-9 columns">
    <% if @user.schedules.any? %>
        <h3>Schedules (<%= @user.schedules.count %>)</h3>
        <table class="schedules">
          <thead>
            <tr>
              <th>Class Date</th>
              <th>Class Time</th>
              <th>Duration</th>
              <th>Student</th>
              <th>Class Type</th>
            </tr>
          </thead>
          <tbody>
            <%= render @schedules %>
          </tbody>
        </table>
        <%= will_paginate @schedules, renderer: FoundationPagination::Rails %>
    <% end %>
  </div>
</div>
